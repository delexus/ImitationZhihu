<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/yellow_600</item>
        <item name="android:colorBackground">@color/gray_50</item>

        <item name="android:windowAnimationStyle">@style/ActivityFragmentTransition</item>

        <!-- EditText cursor color -->
        <item name="android:colorControlActivated">@color/blue_400</item>

        <item name="itemColorBackground">@color/white</item>
        <item name="textColorBackground">@color/black</item>
        <item name="imageTintColor">@color/gray_600</item>
        <item name="imageTintColorDeep">@color/gray_500</item>
        <item name="lineColor">@color/gray_500</item>
        <item name="titleColor">@color/black</item>
        <item name="rippleColor">@color/blue_800</item>
        <item name="searchBarColor">@color/blue_400</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_gray_750</item>
        <item name="colorPrimaryDark">@color/blue_gray_850</item>
        <item name="colorAccent">@color/blue_gray_600</item>
        <item name="android:colorBackground">@color/blue_gray_900</item>

        <item name="android:windowAnimationStyle">@style/ActivityFragmentTransition</item>

        <!-- EditText cursor color -->
        <item name="android:colorControlActivated">@color/white</item>

        <item name="itemColorBackground">@color/blue_gray_700</item>
        <item name="textColorBackground">@color/gray_200</item>
        <item name="imageTintColor">@color/white</item>
        <item name="imageTintColorDeep">@color/blue_gray_400</item>
        <item name="lineColor">@color/blue_gray_800</item>
        <item name="titleColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="searchBarColor">@color/blue_gray_800</item>
    </style>

    <style name="ActivityFragmentTransition" parent="@android:style/Animation.Activity">
        <item name="android:fragmentOpenEnterAnimation">@animator/slide_up_open_enter</item>
        <item name="android:fragmentCloseExitAnimation">@animator/slide_down_close_exit</item>
    </style>

</resources>